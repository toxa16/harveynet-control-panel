{
  "name": "harveynet-control-panel",
  "version": "0.0.4",
  "private": true,
  "dependencies": {
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "express": "^4.17.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-scripts": "3.2.0",
    "redux": "^4.0.4",
    "redux-saga": "^1.1.3",
    "serve": "^11.2.0"
  },
  "scripts": {
    "dev:control": "parcel ./control/index-dev.html --out-dir ./build-dev --port 3000",
    "dev:main": "parcel ./main/index-dev.html --out-dir ./build-dev --port 3000",
    "dev:session": "parcel ./session/index-dev.html --out-dir ./build-dev --port 3000",
    "build:main": "parcel build ./main/index.html --out-dir ./build",
    "test:session:integration": "cypress open --config-file ./cypress/session.config.json",
    "test:e2e": "cypress open --config-file ./cypress/e2e.config.json",
    "test:e2e:once": "cypress run --config-file ./cypress/e2e.config.json",
    "test:e2e:auto": "start-server-and-test start http://localhost:4000 test:e2e",
    "test:e2e:once:auto": "PORT=4000 start-server-and-test start http://localhost:4000 test:e2e:once",

    "dev": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:server": "jest ./server --watch",
    "test:server:once": "jest ./server",
    "test:unit": "react-scripts test",
    "test:unit:once": "react-scripts test --watchAll=false",
    "test:e2e:once:old": "start-server-and-test start http://localhost:3000 cypress:run",
    "test": "npm run test:unit:once && npm run test:server:once && npm run test:e2e:once",
    "start": "node ./server/index.js",
    "heroku:start": "serve ./build -l $PORT"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "bootstrap": "^4.3.1",
    "cypress": "^3.6.1",
    "jest": "^24.9.0",
    "parcel-bundler": "^1.12.4",
    "start-server-and-test": "^1.10.6",
    "supertest": "^4.0.2"
  }
}
