{
  "name": "harveynet-control-panel",
  "version": "0.1.0-draft",
  "private": true,
  "dependencies": {
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "express": "^4.17.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "redux": "^4.0.4",
    "redux-saga": "^1.1.3",
    "regenerator-runtime": "^0.13.3"
  },
  "scripts": {
    "dev:control": "parcel ./control/index-dev.html --out-dir ./build-dev --port 3000",
    "dev:main": "parcel ./main/index-dev.html --out-dir ./build-dev --port 3000",
    "dev:session": "parcel ./session/index-dev.html --out-dir ./build-dev --port 3000",
    "build": "parcel build ./main/index.html --out-dir ./build",
    "test:session:integration": "cypress open --config-file ./cypress/session.config.json",
    "test:session:integration:once": "cypress run --config-file ./cypress/session.config.json",
    "test:session:integration:auto": "start-server-and-test dev:session http://localhost:3000 test:session:integration:once",
    "test:server:integration": "jest ./server --watch",
    "test:server:integration:auto": "jest ./server",
    "test:integration:auto": "npm run test:server:integration:auto && npm run test:session:integration:auto",
    "test:e2e": "cypress open --config-file ./cypress/e2e.config.json",
    "test:e2e:once": "cypress run --config-file ./cypress/e2e.config.json",
    "test:e2e:auto": "PORT=4000 start-server-and-test start http://localhost:4000 test:e2e:once",
    "pretest": "npm run build",
    "test": "npm run test:integration:auto && npm run test:e2e:auto",
    "start": "node ./server/index.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "bootstrap": "^4.3.1",
    "cypress": "^3.6.1",
    "jest": "^24.9.0",
    "parcel-bundler": "^1.12.4",
    "start-server-and-test": "^1.10.6",
    "supertest": "^4.0.2"
  }
}
